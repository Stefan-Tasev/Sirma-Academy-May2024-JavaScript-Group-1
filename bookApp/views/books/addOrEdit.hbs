<form action="/books/addOrEdit" method="post">
    <input type="hidden" name="_id" value="{{book._id}}">
    <div>
        <input name="title" placeholder="Book Title" required value="{{book.title}}">
        <label>Book Title</label>
    </div>
    <div>
        <input name="author" placeholder="Author" required value="{{book.author}}">
        <label>Author</label>
    </div>
    <div>
        <input name="price" type="number" min="1" placeholder="Price" required value="{{book.price}}">
        <label>Price</label>
    </div>
    <div>
        <input name="year" type="number" min="1000" placeholder="Published Year" required
            value="{{book.publishedYear}}">
        <label>Published Year</label>
    </div>
    <div>
        <a href="/books">â˜° View all</a>
        <button type="submit">Submit</button>
    </div>
</form>